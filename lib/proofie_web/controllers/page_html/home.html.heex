            <div class="mt-4 bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm">
              Active
            </div>
          </div>
        </div>
        
<!-- Coming Soon Tools -->
        <div class="tool-tile coming-soon p-6">
          <div class="text-center">
            <div class="text-4xl mb-4">üì∏</div>
